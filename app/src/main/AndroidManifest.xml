<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.sabanciuniv.cs310oguzhantavsanhw3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="News"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".PostCommentActivity" android:launchMode="singleInstance"
            android:label="Post Comment"/>
        <activity
            android:name=".CommentActivity"
            android:icon="@drawable/ic_add_comment_white_18dp"
            android:label="Comments"/>
        <activity
            android:name=".NewsDetailActivity"
            android:icon="@drawable/ic_comment_white_18dp"
            android:label="News Details" android:launchMode="singleInstance"/>
        <activity android:name=".MainActivity" android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>